include titles/with-decoration.pug

-
  var expertiseList = [
    ['Dentist', 'Padriatic', 'Cardiology'],
    ['Othopaedi', 'Traumatologi', 'Anestesiologi'],
    ['Reumatologi', 'Andrologi', 'Ortodonsia'],
    ['Dentist', 'Padriatic', 'Cardiology'],
    ['Othopaedi', 'Traumatologi', 'Anestesiologi'],
    ['Reumatologi', 'Andrologi', 'Ortodonsia'],
    ['Dentist', 'Padriatic', 'Cardiology'],
    ['Othopaedi', 'Traumatologi', 'Anestesiologi'],
    ['Reumatologi', 'Andrologi', 'Ortodonsia']
  ]

.root
  .container
    .row.spacing8
      .col-lg-1.show-lg-up
      .col-md-5.text-center.text-lg-start
        .title-deco
          .decoration.show-lg-up
          +title-deco($t.medical_landing.expertise_title)
        .wow.parallax-scene.zoomInShort(data-wow-offset="-100" data-wow-delay='0.1s' data-wow-duration='0.3s')
          .parallax-scene
            #scene
              div(data-depth="0.15")
                span.icon-green
              div(data-depth="0.1")
                span.icon-red
              div(data-depth="0.3")
                span.icon-blue
      .col-lg-6.col-md-7
        h4.title-default.use-text-subtitle #{$t.medical_landing.expertise_subtitle}
        p.desc.use-text-paragraph #{$t.medical_landing.expertise_paragraph}
        .hidden-xs-down
          .running-tag
            .slick-carousel#expertise_carousel
              each group in expertiseList
                .tag-group
                  each item in group
                    |
                    |
                    span.tag-item #{item}
                    |
                    |
